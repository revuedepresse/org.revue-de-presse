{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      'cookie-universal-nuxt',
      '@types/he',
      '@types/emoji-js',
      '@types/node',
      '@nuxt/types',
      '@nuxtjs/axios',
      '@nuxtjs/date-fns',
      '@nuxtjs/device',
      '@nuxtjs/router',
      '@nuxtjs/sentry'
    ],
    "typeRoots": ["types"]
  },
  "exclude": [
    ".nuxt",
    "node_modules",
    "dist"
  ]
}
